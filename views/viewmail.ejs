<!doctype html>
<html lang="en" dir="ltr">
<head>
<title>Mail Log</title>
<meta charset="utf-8">
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=no" />
<meta name="description" content=<%= "Mail from " + data.openedBy  %>/>
<meta property="og:title" content=<%= "Mail - " + data.openedBy %> />
<meta property="og:type" content="website" />
<meta property="og:description" content=<%= "Ticket from " + data.openedBy + " at " + data.dateClosed %> />
<link href="https://fonts.googleapis.com/css?family=Arimo:700,700italic,900,900italic%7CAsap:400,400italic,700,700italic" rel="stylesheet" type="text/css" />
<link rel="stylesheet" href="<%=config.domain%>/main.css">
</head>
<body>
<div id="wrapper">
<div id="main">
<div class="inner">
<h1 id="text01">Mail - <%= data.id %></h1>
<p id="text03"><span><strong>Mail ID:</strong> <code><%= data.id %></code></span><br /><br /><span><strong><span style="color: #f1c40d">Mail Details:</span></strong>
</span><br /><span>
    <span><span style="color: #3398DB">Closed By</span>: <code><%= data.closedBy %></code></span><br />
    <span><span style="color: #3398DB">Opened By</span>: <code><%= data.openedBy %></code></span><br />
</p><hr id="divider02">
<% messages.forEach(msg => { %>
    <% let msgs = msg.message.split("/br"); %>
    <h2 id="text04">
        <img style="width: 2.8em; height: 2.8em; display: inline-block; margin-right: 1em; border-radius: 50%; vertical-align: middle;" src=<%= users[msg.user].iconURL %>><span style="font-size: .9em;"><%= users[msg.user].username %> (<code style="font-size: .65em; vertical-align: middle;"><%= msg.user %></code>)</span>
    </h2>
    <% msgs.forEach(message => { %>
        <% if (message.startsWith("<code>")) { %>
            <p id="text02" style="margin-left: 5.4em;"><code><%= message.replace("<code> ", "") %></code></p><hr id="divider02">
        <% } else { %>
            <p id="text02" style="margin-left: 5.4em;"><%= message %></p><hr id="divider02">
        <% } %>
    <% }) %>
<% }) %>


